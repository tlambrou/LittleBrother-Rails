<h2><%= @rubric.topic %></h2>
<div class="row">
  <div class="col-lg-12">

    <%= pie_chart @rubric.criteria.group(:name).count, donut: true %>

    <ul class="dropdown-menu dropdown-tasks">

    </ul>

    <ul class="chat">
      <% @rubric.criteria.roots.each do |t| %>
      <% t.children.each do |c| %>

      <% end %>
      <a href="<%= t.path %>" class="list-group-item list-group-item-action">
        <li class="left clearfix">
          <span class="chat-img pull-left">
            <img src="http://placehold.it/50/55C1E7/fff" alt="User Avatar" class="img-circle" />
          </span>
          <div class="chat-body clearfix">
            <div class="header">
              <strong class="primary-font"><%= t.name %></strong>
              <small class="pull-right text-muted">
                <i class="fa fa-clock-o fa-fw">posted</i> <%= time_ago_in_words(t.created_at) %> ago
      </small>
            </div>
            <p>
              <%= markdown(t.description).html_safe %>
            </p>
          </div>
        </li>
      </a>
      <% end %>
    </ul>
  </div>
  <!-- /.panel -->
</div>
